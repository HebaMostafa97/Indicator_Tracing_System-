@model ISDCore.LogInModel
@{
  ViewBag.Title = "Sign In";
}

<div style="margin-left:15%; margin-right:15%;">
  <div style="margin-top:10px;">
    <a href="@Url.Action("CahngeLanguage","Home",new { LanguageAbbreviation = "en"})" class="btn btn-default">English</a>
    <a href="@Url.Action("CahngeLanguage","Home",new { LanguageAbbreviation = "Ar"})" class="btn btn-default">عربى</a>

    @*@Html.ActionLink("English", "CahngeLanguage", new { LanguageAbbreviation = "en"})
      | @Html.ActionLink("عربى", "CahngeLanguage", new { LanguageAbbreviation = "Ar" })*@

  </div>

  <div>
    @using (Html.BeginForm("LogIn", "LogIN"))
    {
      @Html.AntiForgeryToken()
      <div class="LoginForm">
        <div class="">
          <h2 style="margin-bottom:20px;">@ITS.Resources.ResourcesFiles.MapLabel.LogIn</h2>
          <div class="form-group">
            @Html.TextBoxFor(model => model.username, new { placeholder = ITS.Resources.ResourcesFiles.MapLabel.Username, @class = "form-control username" })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
          </div>

          <div class="form-group">
            @Html.PasswordFor(model => model.password, new { placeholder = ITS.Resources.ResourcesFiles.MapLabel.Password, Class = "form-control password" })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
          </div>
          <div>
            <div class="form-group">
              <br />
              <input type="submit" style="direction:ltr" value=@ITS.Resources.ResourcesFiles.MapLabel.LogIn class="btn submit" />
            </div>
          </div>
          <div>
            <span style="color:red">@Session["ErrorLogInMsg"]</span>
          </div>
          <div style="margin-top:10px;">
            <a href="@Url.Action("ForgetPassword","LogIn")" style="color:black">@ITS.Resources.ResourcesFiles.MapLabel.ForgotPassword</a>
          </div>
        </div>
      </div>
    }
  </div>
</div>



