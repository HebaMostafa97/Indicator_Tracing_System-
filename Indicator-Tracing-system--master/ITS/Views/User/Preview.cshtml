@model ITS.Models.User
@using ITS.Models
@using ISDCore
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@* div d beta3 Cancel button *@
<div class="row">
    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 @ITS.Resources.ResourcesFiles.MapCssClass.OriantationInverse">
        <a href="@Url.Action("Browse","User")" class="btn btn-danger">@ITS.Resources.ResourcesFiles.MapLabel.Cancel</a>
    </div>
</div>

<h2 style="color:white; background-color:darkcyan; padding-top:8px; padding-bottom:8px;padding-right:8px;">@ViewBag.PreviewTitle @Model.Name</h2>
<style>
    .title {
        font-size: large;
        color: gray;
        font-weight: bold;
    }
</style>

<div>
    <table style="width:100%">

        <tr>
            <div class="row">
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    @if (Model.Photo == null)
                    {
                        <img src="~/Resources/Images/mainUser.png" style="border:1px solid black; border-radius:10px; height:150px;" />
                    }
                    else
                    {

                        foreach (var item in Model.Photo)
                        {
                            string path = "/Uploads/User" + Model.Photo;
                            <img src="@path" style="border:1px solid black; border-radius:10px; height:150px;" />
                        }

                    }
                </div>
            </div>
        </tr>

        <tr>
            <div class="row">
                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Name</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.Name</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Email</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.Email</span>
                    </div>
                </td>
            </div>
        </tr>



        <tr>
            <div class="row">
                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.HomePage</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.HomePage</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.JobTitle</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.JobTitle</span>
                    </div>
                </td>
            </div>
        </tr>

        <tr>
            <div class="row">
                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12  form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.LastLogonDate</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.LastLogonDate</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.LastLogoutDate</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.LastLogoutDate</span>
                    </div>
                </td>
            </div>
        </tr>



        <tr>
            <div class="row">
                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Notes</span>
                    </div>
                </td>

                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                        <span class="value">@Model.Notes</span>
                    </div>
                </td>
            </div>

        </tr>



    </table>




    <h2 style="color:white; background-color:darkcyan; padding-top:8px; padding-bottom:8px;padding-right:8px;">@ViewBag.GroupOf</h2>
    <table style="width:50%">
        @foreach (var item in Model.Groups)
        {
            <tr>
                <div class="row">
                    <td>
                        <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12  form-group">
                            <span class="value">@item.Name</span>
                        </div>
                    </td>
                </div>

            </tr>
        }
    </table>




</div>













