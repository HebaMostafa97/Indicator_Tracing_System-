@model ITS.Models.Group
@using ISDCore
@{
  if (Model.ID <= 0)
  {
    ViewBag.title = "Add";
  }
  else
  {
    ViewBag.title = "Edit";
  }
  Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@if (Model.ID <= 0)
{
  <h2>@ITS.Resources.ResourcesFiles.MapLabel.Create  @ITS.Resources.ResourcesFiles.MapLabel.Group</h2>
}
else
{
  <h2>@ITS.Resources.ResourcesFiles.MapLabel.Edit  @ITS.Resources.ResourcesFiles.MapLabel.Group: @Model.Name</h2>
}

@using (Html.BeginForm("Form", "Group"))
{
  <div>
    @Html.HiddenFor(model => model.ID)
    <div class="row">
      <div class="col-xsm-12 col-sm-12 col-md-2 col-lg-1 ">
        <label>@ITS.Resources.ResourcesFiles.MapLabel.Name<span class="required" style="color:red; margin-left:5%;">*</span></label>
      </div>
      <div class="col-xsm-12 col-sm-12 col-md-6 col-lg-5 ">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
      </div>
    </div>

    <br />

    <div class="row">
      <div class="col-xsm-12 col-sm-12 col-md-2 col-lg-1 ">
        <label>@ITS.Resources.ResourcesFiles.MapLabel.Email</label>
      </div>
      <div class="col-xsm-12 col-sm-12 col-md-6 col-lg-5 ">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
      </div>
    </div>
    <br />
    <div class="row">
      <div class="col-xsm-12 col-sm-12 col-md-2 col-lg-1 ">
        <label>@ITS.Resources.ResourcesFiles.MapLabel.HomePage</label>
      </div>
      <div class="col-xsm-12 col-sm-12 col-md-6 col-lg-5 ">
        @Html.EditorFor(model => model.HomePage, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.HomePage, "", new { @class = "text-danger" })
      </div>
    </div>
    <br />
    <div class="row">
      <div class="col-xsm-12 col-sm-12 col-md-2 col-lg-1 ">
        <label>@ITS.Resources.ResourcesFiles.MapLabel.Notes</label>
      </div>
      <div class="col-xsm-12 col-sm-12 col-md-6 col-lg-5 ">
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @cols = 3, @rows = 3 })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
      </div>
    </div>
    <br />
    <div class="row">

      <div class="col-xsm-12 col-sm-12 col-md-2 col-lg-1 ">
        <label>@ITS.Resources.ResourcesFiles.MapLabel.SortIndex</label>
      </div>

      <div class="col-xsm-12 col-sm-12 col-md-3 col-lg-1 ">
        @Html.EditorFor(model => model.SortIndex, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SortIndex, "", new { @class = "text-danger" })
      </div>

      <div class="col-xsm-2 col-sm-2 col-md-2 col-lg-1 ">
        @if (Model != null && Model.Focus == 1)
        {
          <input type="checkbox" name="focus" checked="checked" />
        }
        else
        {

          <input type="checkbox" name="focus" />
        }
        <span>@ITS.Resources.ResourcesFiles.MapLabel.Focus</span>
      </div>

      <div class="col-xsm-2 col-sm-2 col-md-2 col-lg-1 ">

        @if (Model != null && Model.Active == 1)
        {
          <input type="checkbox" name="active" checked="checked" />
        }
        else
        {

          <input type="checkbox" name="active" />
        }
        <span>@ITS.Resources.ResourcesFiles.MapLabel.Active</span>
      </div>
    </div>
    <br />

  </div>
  <div class="row">
    <div class="col-xsm-12 col-sm-12 col-md-8 col-lg-6 @ITS.Resources.ResourcesFiles.MapCssClass.OriantationInverse">
      <a href="@Url.Action("Browse","Group" , new { times = 1})" class="btn btn-danger">@ITS.Resources.ResourcesFiles.MapLabel.Cancel</a>
      @if (Model.ID <= 0)
      {
        <a href="@Url.Action("Add","Group")" class="btn btn-warning">@ITS.Resources.ResourcesFiles.MapLabel.Reset</a>
      }
      else
      {
        <a href="@Url.Action("ResetEdit","Group",new { ID=Model.ID})" class="btn btn-warning">@ITS.Resources.ResourcesFiles.MapLabel.Reset</a>
      }
      @if (Model.ID <= 0)
      {
        <input type="submit" value="@ITS.Resources.ResourcesFiles.MapLabel.SaveAdd" name="Form" class="btn btn-success" />
      }
      else
      {
        <input type="submit" value="@ITS.Resources.ResourcesFiles.MapLabel.SaveEdit" name="Form" class="btn btn-success" />
      }
      <input type="submit" value="@ITS.Resources.ResourcesFiles.MapLabel.Save" name="Form" class="btn btn-success" />

    </div>
    
  </div>
}



