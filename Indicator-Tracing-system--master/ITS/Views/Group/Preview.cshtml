@model ITS.Models.Group
@using ITS.Models
@using ISDCore
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 @ITS.Resources.ResourcesFiles.MapCssClass.OriantationInverse">
        <a href="@Url.Action("Browse","Group")" class="btn btn-danger">@ITS.Resources.ResourcesFiles.MapLabel.Cancel</a>
    </div>
</div>
<h2 style="color:white; background-color:darkcyan; padding-top:8px; padding-bottom:8px;padding-right:8px;">@ViewBag.PreviewTitle @Model.Name</h2>
<style>
    .title {
        font-size: large;
        color: gray;
        font-weight: bold;
    }
</style>
<div>
    <table style="width:100%">
        <tr>
          <div class="row">
            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Name</span>
                </div>
            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="value">@Model.Name</span>
                </div>

            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Email</span>
                </div>
            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="value">@Model.Email</span>
                </div>
            </td>
          </div>
        </tr>
       

        <tr>
          <div class="row">
            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.Description</span>
                </div>
            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="value">@Model.Description</span>
                </div>
            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="title">@ITS.Resources.ResourcesFiles.MapLabel.HomePage</span>
                </div>
            </td>

            <td>
                <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <span class="value">@Model.HomePage</span>
                </div>
            </td>
           </div>
        </tr>
        


    </table>
    <br />
    <br />

    <h2 style="color:white; background-color:darkcyan; padding-top:8px; padding-bottom:8px;padding-right:8px;">@ViewBag.UsersOf</h2>
    <table style="width:50%">
        @foreach (var item in Model.Users)
        {
            <tr>
              <div class="row">
                <td>
                    <div class="col-xsm-12 col-sm-12 col-md-12 col-lg-12  form-group">
                        <span class="value">@item.Name</span>
                    </div>
                </td>
              </div>
            </tr>
        }
    </table>

    <br/>
    <br/>
    <br/>


   

</div>

